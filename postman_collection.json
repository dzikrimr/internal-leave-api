  "item": [
    {
      "name": "Auth",
      "description": "Endpoints untuk autentikasi pengguna. Termasuk registrasi akun baru dan login untuk mendapatkan JWT token yang diperlukan untuk mengakses endpoint lainnya.",
      "item": [
        {
          "name": "Register User",
          "description": "Mendaftarkan akun pengguna baru dengan email dan password. Endpoint ini tidak memerlukan autentikasi.",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/auth/register",
                  "host": ["{{base_url}}"],
                  "path": ["auth", "register"]
                }
              },
              "status": "Created",
              "code": 201,
              "body": "{\n  \"id\": 1,\n  \"email\": \"user@example.com\",\n  \"createdAt\": \"2024-02-02T10:00:00.000Z\"\n}"
            }
          ]
        },
        {
          "name": "Login User",
          "description": "Melakukan autentikasi pengguna dan menerima JWT token. Simpan token ke variable {{token}} untuk digunakan di request-request selanjutnya.",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          },
          "response": [
            {
              "name": "Success",
              "originalRequest": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"email\": \"user@example.com\",\n  \"password\": \"password123\"\n}"
                },
                "url": {
                  "raw": "{{base_url}}/auth/login",
                  "host": ["{{base_url}}"],
                  "path": ["auth", "login"]
                }
              },
              "status": "OK",
              "code": 200,
              "body": "{\n  \"access_token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\",\n  \"user\": {\n    \"id\": 1,\n    \"email\": \"user@example.com\"\n  }\n}"
            }
          ]
        }
      ]
    },
    {
      "name": "Leaves",
      "description": "Endpoints untuk mengelola permintaan cuti karyawan. Termasuk membuat request cuti baru, melihat daftar cuti, dan mengubah status approval cuti.",
      "item": [
        {
          "name": "Create Leave Request",
          "description": "Membuat request cuti baru. Memerlukan autentikasi JWT. Tipe cuti yang didukung: ANNUAL, SICK, PERSONAL, COMPASSIONATE",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"ANNUAL\",\n  \"startDate\": \"2024-03-01\",\n  \"endDate\": \"2024-03-05\",\n  \"reason\": \"Vacation\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/leaves",
              "host": ["{{base_url}}"],
              "path": ["leaves"]
            }
          },
          "response": [
            {
              "name": "Success",
              "code": 201,
              "body": "{\n  \"id\": 1,\n  \"userId\": 1,\n  \"type\": \"ANNUAL\",\n  \"startDate\": \"2024-03-01\",\n  \"endDate\": \"2024-03-05\",\n  \"reason\": \"Vacation\",\n  \"status\": \"PENDING\",\n  \"createdAt\": \"2024-02-02T10:00:00.000Z\"\n}"
            }
          ]
        },
        {
          "name": "Get All Leaves",
          "description": "Mengambil daftar semua request cuti. Memerlukan autentikasi JWT.",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/leaves",
              "host": ["{{base_url}}"],
              "path": ["leaves"]
            }
          },
          "response": [
            {
              "name": "Success",
              "code": 200,
              "body": "[\n  {\n    \"id\": 1,\n    \"userId\": 1,\n    \"type\": \"ANNUAL\",\n    \"startDate\": \"2024-03-01\",\n    \"endDate\": \"2024-03-05\",\n    \"reason\": \"Vacation\",\n    \"status\": \"PENDING\",\n    \"createdAt\": \"2024-02-02T10:00:00.000Z\"\n  }\n]"
            }
          ]
        },
        {
          "name": "Get Leave by ID",
          "description": "Mengambil detail request cuti spesifik berdasarkan ID. Parameter path: leave_id (integer). Memerlukan autentikasi JWT.",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/leaves/{{leave_id}}",
              "host": ["{{base_url}}"],
              "path": ["leaves", "{{leave_id}}"]
            }
          },
          "response": [
            {
              "name": "Success",
              "code": 200,
              "body": "{\n  \"id\": 1,\n  \"userId\": 1,\n  \"type\": \"ANNUAL\",\n  \"startDate\": \"2024-03-01\",\n  \"endDate\": \"2024-03-05\",\n  \"reason\": \"Vacation\",\n  \"status\": \"PENDING\",\n  \"createdAt\": \"2024-02-02T10:00:00.000Z\"\n}"
            }
          ]
        },
        {
          "name": "Update Leave Status",
          "description": "Mengubah status approval dari request cuti. Parameter path: leave_id (integer). Status yang diperbolehkan: APPROVED, REJECTED, CANCELLED. Memerlukan autentikasi JWT.",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"APPROVED\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/leaves/{{leave_id}}/status",
              "host": ["{{base_url}}"],
              "path": ["leaves", "{{leave_id}}", "status"]
            }
          },
          "response": [
            {
              "name": "Success",
              "code": 200,
              "body": "{\n  \"id\": 1,\n  \"userId\": 1,\n  \"type\": \"ANNUAL\",\n  \"startDate\": \"2024-03-01\",\n  \"endDate\": \"2024-03-05\",\n  \"reason\": \"Vacation\",\n  \"status\": \"APPROVED\",\n  \"createdAt\": \"2024-02-02T10:00:00.000Z\"\n}"
            }
          ]
        }
      ]
    },
    {
