          "description": "Menghapus akun pengguna. Parameter path: user_id (integer). Aksi ini tidak dapat dibatalkan. Memerlukan autentikasi JWT.",
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{token}}",
                  "type": "string"
                }
              ]
            },
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{base_url}}/users/{{user_id}}",
              "host": ["{{base_url}}"],
              "path": ["users", "{{user_id}}"]
            }
          },
          "response": [
            {
              "name": "Success",
              "code": 200,
              "body": "{\n  \"message\": \"User deleted successfully\"\n}"
            }
          ]
        }
      ]
    }
  ]
